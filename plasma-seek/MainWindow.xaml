<Window x:Class="plasma_seek.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:plasma_seek"
        xmlns:localMyControl="clr-namespace:plasma_seek.MyControl"
        mc:Ignorable="d"
        Height="450" Width="800"
        WindowStyle="ToolWindow"
        ResizeMode="CanResize"
        x:Name="myWin">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!--分区-->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Button HorizontalAlignment="Center" VerticalAlignment="Center">本地</Button>
                <WrapPanel x:Name="songCurrentPanel" Grid.Row="2">
                    <!--<localMyControl:DrawImagePanel x:Name="songFace" Width="50" Height="50"/>-->
                    <Image x:Name="currentSongImage" Source="Images/DiskImage.png" Width="80" Height="80" HorizontalAlignment="Left"/>
                    <StackPanel Name="panel" Width="100">
                        <StackPanel Orientation="Horizontal">
                            <Label  Content="歌手:"/>
                            <TextBlock x:Name="currentSongArtist" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="专辑:"/>
                            <TextBlock x:Name="currentSongAlbum" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="类型:"/>
                            <TextBlock x:Name="currentSongGenur" />
                        </StackPanel>
                    </StackPanel>
                    <TextBlock Text="歌曲:"/>
                    <TextBlock Name="currentSongTitle"/>
                </WrapPanel>
            </Grid>
            <!--内容区-->
            <Grid Grid.Column="1" x:Name="contentShow">

                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                        <Button x:Name="findMusic" Content="FInd"  Click="FindSongOnClick"/>
                    </StackPanel>

                    <ListView x:Name="songList" SelectionChanged="SongSelectionChange" 
                              MouseDoubleClick="SongListItem_DoubleClick" ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListView.View>
                            <GridView>
                                <GridView.Columns>
                                    <GridViewColumn Header="歌曲" 
                                                    DisplayMemberBinding="{Binding Path=Title}" 
                                                    Width="400"/>
                                    <GridViewColumn DisplayMemberBinding="{Binding Path=Artist}"
                                                    Header="歌手" Width="100"/>
                                    <GridViewColumn DisplayMemberBinding="{Binding Path=Album}" 
                                                    Header="专辑" Width="100"/>
                                </GridView.Columns>
                            </GridView>
                        </ListView.View>
                    </ListView>

                </DockPanel>
            </Grid>
        </Grid>
        <!--底部控制区-->
        <StackPanel Orientation="Horizontal" Grid.Row="2">
            <Button Content="prev" x:Name="previous" Click="Previous_Click"/>
            <Button Content="star/stop" x:Name="startAndPause" Click="StartPaulse_Click"/>
            <Button Content="next" x:Name="next" Click="Next_Click"/>

            <TextBlock x:Name="currentPosition"/>
            <Slider x:Name="timeLineSplier" Width="100"/>
            <TextBlock x:Name="totalTime"/>

            
            <ToggleButton Content="love" x:Name="loveMusic"/>
            <ToggleButton IsChecked="{Binding ElementName=myWin, Path=IsRecycle, Mode=TwoWay}" Content="recycle all"/>
            <ToggleButton IsChecked="{Binding ElementName=myWin, Path=SingleRecycle, Mode=TwoWay}" Content="singleRecycle"/>
            <ToggleButton IsChecked="{Binding ElementName=myWin, Path=IsRandom, Mode=TwoWay}" Content="random"/>
            <Label  Content="volum"/>
            <Slider x:Name="volum" MinHeight="0" Maximum="1" Value="0.5" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
