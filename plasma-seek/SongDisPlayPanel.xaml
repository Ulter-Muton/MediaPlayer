<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            x:Class="plasma_seek.SongDisPlayPanel"
      Width="60" Height="60">
    <Grid.RowDefinitions>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="30"/>
        <RowDefinition Height="30"/>
    </Grid.RowDefinitions>
    <Image Name="Picture" Stretch="Fill" Source="/Images/DiskImage.png"/>
    <TextBlock Grid.Row="1" Name="songName" Text="{Binding Path=SongTitle}"/>
    <TextBlock Grid.Row="2" Name="artist" Text="{Binding Path=MusicArtist}"/>
    <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top">
        <Button Content="add" Height="10" Width="10" Name="addToPlayList"/>
        <Button Content="love" Height="10" Width="10" Name="loveSong"/>
        <Button Content="edit" Height="10" Width="10" Name="editSong"/>
    </StackPanel>
</Grid>