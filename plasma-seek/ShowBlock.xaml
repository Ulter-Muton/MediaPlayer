<?xml version="1.0" encoding="utf-8" ?>
<Border xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="plasma_seek.ShowBlock"
        Background="#f2f4f6" CornerRadius="5" Width="200" Height="20">
    <StackPanel Orientation="Horizontal">
        <TextBlock Name="indexBox"  FontSize="14" TextAlignment="Right" Margin="4,1,4,1" Width="172"/>
        <Button HorizontalAlignment="Right">
            <Button.Template>
                <ControlTemplate>
                    <Border Width="16" Height="16"
                            CornerRadius="4" Margin="2"
                            Background="#6b48ff">
                        <Grid>
                            <Polygon Name="play" Points="4,6 4,10 7,10 12,14 12,2 7,6" Fill="White"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter TargetName="play" Property="Fill" Value="#1ee3cf"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
                
            </Button.Template>
        </Button>
    </StackPanel>
    
</Border>